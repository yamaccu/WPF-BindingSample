<Window x:Class="Sample1_DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sample1_DataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <Button Content="1 UP" HorizontalAlignment="Left" Margin="77,161,0,0" VerticalAlignment="Top" Height="50" Width="60" Click="OneUp_Click"/>
        <Button Content="1 DOWN" HorizontalAlignment="Left" Margin="163,161,0,0" VerticalAlignment="Top" Width="60" Height="50" Click="OneDown_Click"/>
        <TextBox x:Name="Counter" HorizontalAlignment="Left" Margin="77,73,0,0" Text="{Binding Counter}" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" FontSize="36" Height="56"/>
    </Grid>
</Window>

